<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ui.setting.SettingActivity">

    <TextView
        android:id="@+id/onlyCustomTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Custom\nTheme"
        android:textColor="@color/custom_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:drawableTint="?attr/colorError"
        app:drawableTopCompat="@drawable/baseline_account_tree_24" />

    <TextView
        android:id="@+id/changeTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="Theme"
        android:textColor="@color/custom_color_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:drawableTint="?attr/colorError"
        app:drawableTopCompat="@drawable/ic_dashboard_black_24dp" />
</LinearLayout>