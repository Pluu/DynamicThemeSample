<resources>
    <!-- Base application theme. -->
    <style name="Theme.DynamicThemeSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="custom_color_background">?colorOnPrimary</item>
        <item name="custom_color_primary">?colorPrimary</item>
        <item name="custom_color_accent">?colorSecondary</item>
    </style>

    <attr name="custom_color_background" format="color" />
    <attr name="custom_color_primary" format="color" />
    <attr name="custom_color_accent" format="color" />

    <style name="Pluu" parent="Theme.DynamicThemeSample">
        <item name="custom_color_background">#EF9A9A</item>
        <item name="custom_color_primary">?colorPrimary</item>
        <item name="custom_color_accent">?colorSecondary</item>
    </style>

    <style name="Pluu.Dark" parent="Theme.DynamicThemeSample">
        <item name="custom_color_background">#B71C1C</item>
        <item name="custom_color_primary">#B2EBF2</item>
        <item name="custom_color_accent">#006064</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.DynamicThemeSample" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>