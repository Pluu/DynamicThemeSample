<resources>
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/custom_color_background</item>
        <!-- Customize your theme here. -->
    </style>

    <drawable name="custom_wallpaper">@drawable/jingburger</drawable>
    <color name="custom_color_background">#fff8f3</color>
    <color name="custom_color_primary">#7d570e</color>
    <color name="custom_color_on_primary">#ffffff</color>
    <color name="custom_color_primary_container">#ffdeae</color>
    <color name="custom_color_on_primary_container">#281800</color>
</resources>