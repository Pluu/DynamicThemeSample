    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6D5E0F</item>
        <item name="colorPrimaryVariant">#F8E287</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#665E40</item>
        <item name="colorSecondaryVariant">#EEE2BC</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/custom_color_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
    </style>

